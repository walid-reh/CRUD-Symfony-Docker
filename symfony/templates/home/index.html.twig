{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

<!-- Black with white text -->
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="#">Bienvenu chez Pictime Group !</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/articles">Articles</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/category">Categories</a>
    </li>
  </ul>
</nav>


<div class="container">
  <h1>Veuillez trouver les dernières actualité de Pictime</h1>
  <br>
  <div class="row">
  {% for article in articles %}
      <div class="col-md-4">
          <h2>{{ article.title }}</h2>
          <p>{{ article.content }}</p>
          <p><a class="btn btn-secondary" href="{{ path('articles_show', {'id': article.id}) }}" role="button">View details »</a></p>
      </div>
      {% endfor %}
    </div>
</div>

{% endblock %}